{
  "version": 2,
  "builds": [
    {
      "src": "helpdesk/wsgi.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb", 
        "runtime": "python3.11" 
      }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1"
    },
    {
      "src": "/(.*)",
      "dest": "helpdesk/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "helpdesk.settings_vercel"
  },
  "functions": {
    "helpdesk/wsgi.py": {
      "includeFiles": "**"
    }
  }
}
